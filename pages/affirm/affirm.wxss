.batch_deletion_box{
  width: 100%;
  height: 100%;
  position:absolute;
  background: #F2F2F2;
}
.title__box{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 32rpx;
  color: #3BA0EB;
}
.check_box{
  width: 100%;  
  background: #F2F2F2;
}
.list{
  box-sizing: border-box;
  padding: 10rpx 60rpx 10rpx 30rpx;
  background: #FFF;
  font-size: 30rpx;
  margin-bottom: 30rpx;
  display:flex;
}
.cbs{
  box-sizing: border-box;
  padding-top: 20rpx;
}
.order{
  color: #aaa;
}
.jianjie{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  margin-top: 10rpx;
}
.btn{
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
}
.kongbai{
  width: 100%;
  height: 100rpx;
}
.no_more{
  width: 100%;
  background: #F2F2F2;
  text-align: center;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}