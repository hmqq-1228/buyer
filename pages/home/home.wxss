.home_box{
  width: 100%;
  height: 100%;
  position: absolute;
  background: #F2F2F2;
}
/* 搜索 */
.search_box{
  width: 100%;
  height: 94rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  border-top: 1rpx solid #CCC;
  border-bottom: 1rpx solid #CCC;
  position: relative;
  display: flex;
}
.section{
  width: 86%;
  background: #FFF;
  font-size: 30rpx;
  color: #333;
  border-radius: 10rpx;
}
.placeholders{
  font-size: 30rpx;
  color: #bbb;
}
.search_input{
  height: 70rpx;
  box-sizing: border-box;
  padding-left:80rpx; 
}
.search_img{
  position: absolute;
  top:18rpx;
  left:35rpx;
  width: 55rpx;
  height: 55rpx;
}
.cancel{
  font-size: 35rpx;
  color: #73CEF1;
  line-height: 70rpx;
  margin-left: 20rpx;
}
/* 筛选 */
.screen_box{
  width: 100%;
  height: 94rpx;
  line-height: 94rpx;
  border-bottom: 1rpx solid #CCC;
  position: relative;
  display: flex;
  background: #FFF;
  font-size: 35rpx;
  color: #333;
}
.condition{
  width: 80%;
  display: flex;
  justify-content: space-between;
}
.screen_box image{
  width: 45rpx;
  height: 45rpx;
  margin: 25rpx 10rpx;
}
.time{
  display: flex;
  width: 50%;
  box-sizing: border-box;
  padding-left: 15%;
}
.grade{
  display: flex;
  width: 50%;
  box-sizing: border-box;
  padding-left: 15%;
}
.name{
  width: 20%;
  display: flex;
  border-left: 1rpx solid #DDD;
}
.list{
  display: flex;
  flex-direction: column;
  width: 100%;
  background: #FFF;
  box-sizing: border-box;
  padding: 15rpx;
  font-size: 32rpx;
  color: #777;
  line-height: 45rpx;
  position: relative;
  border-bottom: 1px solid #CCC;
}
.list image{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 99rpx;
  right: 70rpx;
}
.thicker{
  color: #333;
}
.activity{
  width: 90rpx;
  height: 45rpx;
  line-height: 45rpx;
  background: #00CCFF;
  color: #FFF;
  text-align: center;
  position: absolute;
  top: 15rpx;
  right:50rpx;
}
.color1{
  color: #3ba0eb !important;
}
.color2{
  color: #333;
}
.hidden{
  display: none;
}
.show{
  display: block;
}