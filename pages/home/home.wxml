<view class='home_box'>
  <!-- 搜索框 -->
  <view class='search_box'>
    <view class="section">
      <input class='search_input' placeholder="搜索" placeholder-class="placeholders" />
    </view>
    <image class='search_img' src='/images/search.png'></image>
    <text class='cancel'>取消</text>
  </view>
  <!-- 筛选 -->
  <view class='screen_box'>
    <view class='condition'>
      <view class='time'>
        <picker bindchange="bindPicker_time" value="{{time_arr_index}}" range="{{time_arr}}">
          <view class="picker {{color_time}}">
            {{time_arr[time_arr_index]}}
          </view>
        </picker>
        <image class='{{time_hui}}' src='/images/sanjiao_hui.png'></image>
        <image class='{{time_true}}' src='/images/sanjiao_true.png'></image>
        <image class='{{time_dao}}' src='/images/sanjiao_dao.png'></image>
      </view>
      <view class='grade'>
        <picker bindchange="bindPicker_grade" value="{{grade_arr_index}}" range="{{grade_arr}}">
          <view class="picker {{color_grade}}">
            {{grade_arr[grade_arr_index]}}
          </view>
        </picker>
        <image class='{{grade_hui}}' src='/images/sanjiao_hui.png'></image>
        <image class='{{grade_true}}' src='/images/sanjiao_true.png'></image>
        <image class='{{grade_dao}}' src='/images/sanjiao_dao.png'></image>
      </view>
    </view>
    <view class='name'>
      <image src='/images/screen.png'></image>
      <text>筛选</text>
    </view>
  </view>
  <!-- 列表123456 -->
  <view class='list' wx:for="{{array}}" wx:key="this" bindtap='details'>
    <text class='thicker'>{{item.name}}</text>
    <text class='thicker'>需求款数: {{item.paragraph_nums}}</text>
    <text>开发申请人: {{item.user_name}}</text>
    <text>等级: {{item.grade}}</text>
    <text>期望完成日期: {{item.date}}</text>
    <view class='activity'>活动</view>
    <image src='/images/jinru.png'></image>
  </view>
</view>